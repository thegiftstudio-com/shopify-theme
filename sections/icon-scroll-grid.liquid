{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .icon-scroll-grid--{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }

  .icon-scroll-grid__container--{{ section.id }} {
    {% if section.settings.enable_horizontal_scroll %}
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -ms-overflow-style: none;
      scrollbar-width: none;
    {% endif %}
  }

  .icon-scroll-grid__container--{{ section.id }}::-webkit-scrollbar {
    display: none;
  }

  .icon-scroll-grid__item--{{ section.id }} {
    {% if section.settings.enable_horizontal_scroll %}
      scroll-snap-align: start;
    {% endif %}
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1.5rem;
  }

  .icon-scroll-grid__item--{{ section.id }} img {
    display: block;
    margin: 0 auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .icon-scroll-grid__container--{{ section.id }} {
    display: grid;
    place-items: center;
    gap: 2rem;
    {% if section.settings.enable_horizontal_scroll %}
      grid-auto-flow: column;
      grid-auto-columns: calc(100% / {{ section.settings.columns_desktop }});
      @media screen and (max-width: 989px) {
        grid-auto-columns: calc(100% / 2);
      }
    {% else %}
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      @media screen and (max-width: 989px) {
        grid-template-columns: repeat(3, 1fr);
      }
      @media screen and (max-width: 749px) {
        grid-template-columns: repeat(2, 1fr);
      }
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .icon-scroll-grid__item--{{ section.id }} {
      padding: 1rem;
    }
  }
{%- endstyle -%}

<section class="icon-scroll-grid--{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="h1 section-header__title"
          style="font-size: {{ section.settings.heading_size }}px; text-align: {{ section.settings.heading_alignment }}; color: {{ section.settings.heading_color }};">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    <div class="icon-scroll-grid__container--{{ section.id }} gap-4">
      {%- for block in section.blocks -%}
        <div class="icon-scroll-grid__item--{{ section.id }}" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            {%- assign loading_attr = section.settings.enable_lazy_loading | default: true | ternary: 'lazy', 'eager' -%}
            {%- assign img_url = block.settings.icon | image_url: width: block.settings.icon_width -%}
            <img src="{{ img_url }}"
              loading="{{ loading_attr }}"
              width="{{ block.settings.icon_width }}"
              height="{{ block.settings.icon_width }}"
              class="mx-auto"
              style="border-radius: {{ block.settings.border_radius }}px;"
              alt="{{ block.settings.heading | escape }}"
            >
          {%- endif -%}
          
          {%- if block.settings.heading != blank -%}
            <h3 style="font-size: {{ block.settings.heading_size }}px; text-align: center; margin-top: 1rem; color: {{ block.settings.heading_color }};">
              {{ block.settings.heading }}
            </h3>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icon Grid with Scroll",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Icon Grid"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 64,
      "step": 2,
      "unit": "px",
      "label": "Section Heading Size",
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "enable_lazy_loading",
      "label": "Enable Lazy Loading",
      "default": true,
      "info": "If enabled, the content will be lazy loaded. Recommended to enable this if the section is not in the first fold."
    },
    {
      "type": "checkbox",
      "id": "enable_horizontal_scroll",
      "label": "Enable Horizontal Scroll",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 4
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "range",
          "id": "icon_width",
          "min": 40,
          "max": 200,
          "step": 10,
          "unit": "px",
          "label": "Icon Width",
          "default": 100
        },
        {
          "type": "range",
          "id": "border_radius",
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Border Radius",
          "default": 0
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 12,
          "max": 36,
          "step": 1,
          "unit": "px",
          "label": "Heading Size",
          "default": 18
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Grid with Scroll",
      "blocks": [
        {
          "type": "icon_item"
        },
        {
          "type": "icon_item"
        },
        {
          "type": "icon_item"
        },
        {
          "type": "icon_item"
        }
      ]
    }
  ]
}
{% endschema %}
