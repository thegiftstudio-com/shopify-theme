{% style %}
.testimonial-slider {
  padding: 80px 0;
  background-color: {{ section.settings.background_color }};
}

.testimonial-slider__container {
  display: flex;
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
}

.testimonial-slider__left {
  flex: 0 0 300px;
}

.testimonial-slider__right {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.testimonial-slider__heading {
  color: {{ section.settings.heading_color }};
  font-size: {{ section.settings.heading_font_size }}px;
  margin-bottom: 30px;
}

.testimonial-slider__subheading {
  color: {{ section.settings.subheading_color }};
  font-size: {{ section.settings.subheading_font_size }}px;
  margin-bottom: 40px;
}

.testimonial-slider__companies {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.testimonial-slider__company {
  cursor: pointer;
  transition: all 0.3s ease;
}

.testimonial-slider__company.active {
  color: #ff4747 !important;
}

.testimonial-slider__card {
  position: absolute;
  width: {{ section.settings.card_width }}px;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.5s ease;
  background: {{ section.settings.card_background_color }};
  border-radius: {{ section.settings.card_border_radius }}px;
  padding: {{ section.settings.card_padding }}px;
  box-shadow: {{ section.settings.card_enable_shadow | default: true | json | replace: '"', '' | append: ' 0 4px 12px rgba(0, 0, 0, 0.1)' }};
  margin: 0 auto;
}

.testimonial-slider__card.active {
  opacity: 1;
  transform: translateY(0);
}



.testimonial-slider__image {
  width: {{ section.settings.image_width }}px;
  height: {{ section.settings.image_height }}px;
  border-radius: {{ section.settings.image_border_radius }}px;
  object-fit: {{ section.settings.image_fit }};
  display: block;
  margin: {{ section.settings.image_margin }}px auto;
  box-shadow: {{ section.settings.enable_shadow | default: false | json | replace: '"', '' | append: ' 0 4px 12px rgba(0, 0, 0, 0.1)' }};
}

@media screen and (max-width: 768px) {
  .testimonial-slider {
    padding: 40px 0;
  }

  .testimonial-slider__container {
    flex-direction: column;
    padding: 0 20px;
    gap: 24px;
  }

  .testimonial-slider__left {
    flex: none;
  }

  .testimonial-slider__heading {
    font-size: 24px;
    margin-bottom: 16px;
    text-align: center;
  }

  .testimonial-slider__subheading {
    font-size: 16px;
    margin-bottom: 24px;
    text-align: center;
  }

  .testimonial-slider__companies {
    flex-direction: row;
    overflow-x: auto;
    white-space: nowrap;
    padding-bottom: 16px;
    gap: 16px;
    margin: 0 -20px;
    padding-left: 20px;
    padding-right: 20px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
  }

  .testimonial-slider__companies::-webkit-scrollbar {
    display: none; /* Chrome, Safari and Opera */
  }

  .testimonial-slider__company {
    display: inline-block;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 20px;
    border: 1px solid #eee;
    white-space: nowrap;
  }

  .testimonial-slider__company.active {
    background: #ff4747;
    color: white !important;
    border-color: #ff4747;
  }

  .testimonial-slider__card {
    position: relative;
    opacity: 1;
    transform: none;
    margin-bottom: 20px;
    display: none;
    width: {{ section.settings.mobile_card_width }}px;
    border-radius: {{ section.settings.mobile_card_border_radius }}px;
    padding: {{ section.settings.mobile_card_padding }}px;
    background: {{ section.settings.card_background_color }};
  }

  .testimonial-slider__card.active {
    display: block;
    transform: none;
  }

  .testimonial-slider__image {
    width: 100%;
    max-width: {{ section.settings.mobile_image_width }}px;
    height: {{ section.settings.mobile_image_height }}px;
    object-fit: {{ section.settings.mobile_image_fit }};
    margin: {{ section.settings.mobile_image_margin }}px auto;
    border-radius: {{ section.settings.mobile_image_border_radius }}px;
  }

  .testimonial-slider__hamper {
    background: #f8f8f8;
    padding: 16px;
    border-radius: 8px;
    margin-top: 16px;
  }

  .testimonial-slider__hamper-title {
    color: #333;
    font-size: 16px;
  }

  .testimonial-slider__hamper-items {
    font-size: 14px;
    line-height: 1.6;
  }

  .testimonial-slider__hamper-items li {
    margin-bottom: 8px;
  }
}
{% endstyle %}

<div class="testimonial-slider" data-testimonial-slider>
  <div class="testimonial-slider__container">
    <div class="testimonial-slider__left">
      <h2 class="testimonial-slider__heading">{{ section.settings.heading }}</h2>
      <p class="testimonial-slider__subheading">{{ section.settings.subheading }}</p>
      <div class="testimonial-slider__companies">
        {%- for block in section.blocks -%}
          <div class="testimonial-slider__company{% if forloop.first %} active{% endif %}" 
               data-company="{{ block.id }}"
               data-index="{{ forloop.index0 }}"
               style="color: {{ block.settings.company_color }}; font-size: {{ block.settings.company_font_size }}px;">
            {{ block.settings.company_name }}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <div class="testimonial-slider__right">
      {%- for block in section.blocks -%}
        <div class="testimonial-slider__card{% if forloop.first %} active{% endif %}" 
             data-card="{{ block.id }}"
             {{ block.shopify_attributes }}>
          {%- if block.settings.image -%}
            <img 
              src="{{ block.settings.image | image_url: width: 600 }}"
              alt="{{ block.settings.company_name }}"
              class="testimonial-slider__image"
              {{ section.settings.lazy_load | default: true | json | replace: '"', '' | prepend: 'loading=' }}
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  class TestimonialSlider {
    constructor(container) {
      this.container = container;
      this.companies = container.querySelectorAll('.testimonial-slider__company');
      this.cards = container.querySelectorAll('.testimonial-slider__card');
      this.activeIndex = 0;
      this.bindEvents();
    }

    bindEvents() {
      this.companies.forEach((company, index) => {
        company.addEventListener('click', () => this.switchCard(index));
      });
    }

    switchCard(index) {
      if (index === this.activeIndex) return;

      // Update companies
      this.companies[this.activeIndex].classList.remove('active');
      this.companies[index].classList.add('active');

      // Update cards with transition
      this.cards[this.activeIndex].classList.remove('active');
      this.cards[index].classList.add('active');

      this.activeIndex = index;
    }
  }

  // Initialize all sliders on the page
  document.addEventListener('DOMContentLoaded', () => {
    const sliders = document.querySelectorAll('[data-testimonial-slider]');
    sliders.forEach(slider => new TestimonialSlider(slider));
  });
</script>

