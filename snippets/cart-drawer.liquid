                              {% assign total_custom_price = 0 %}
                              {% for item in cart.items %}
                                {% for p in item.properties %}
                                  {% if p.first == 'bundle_id' %}
                                    {% assign custom_price = item.final_line_price %}
                                    {% assign total_custom_price = total_custom_price | plus: custom_price %}
                                  {% endif %}
