                              <label class="visually-hidden" for="Quantity-1"> Quantity </label>
                              <quantity-input class="quantity cart-quantity">
                                <input
                                  class="quantity__input"
                                  data-quantity-variant-id="44337043177779"
                                  type="number"
                                  name="updates[]"
                                  value="1"
