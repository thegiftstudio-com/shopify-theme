                            <a href="#" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                            <div class="cart-item__image-container gradient global-media-settings">
                              <img
                                src="https://cdn.shopify.com/s/files/1/0689/3014/2515/files/18909Assorted_560x_d30e342d-07c2-445b-b952-36b109921f9d.jpg?v=1679995986"
                                class="cart-item__image"
                                alt=""
                                loading="lazy"
                                width="150"
                                height="150"
                                data-cart-bundle-image
                              >
                            </div>
                          </td>

                          <td class="cart-item__details">
                            <a
                              href="/pages/hamper-collections?bundle_id=1015"
                              class="cart-item__name h4"
                              id="bundle_prod_title"
                            >
                              Custom Hamper
                            </a>
